                          $('#results').show();
                          $('#txtResult').val(data.result);
                          $('#divMarked').html(marked(data.result));
                          //alert('done');
                      })
                      .fail(function (xhr, textStatus, errorThrown) {
                          $('#error').html(xhr.responseText);
                          $('#error').show();
                          //alert('fail - ' + xhr.responseText);
                      })
